      },
      "shared-libraries": {
        "path": "internal-projects/shared-libraries", 
        "repository": null,
        "status": "active"
      }
    },
    "clients": {
      "big-marble-farms": {
        "path": "client-projects/big-marble-farms",
        "repository": "https://github.com/neweraintelligence/big-marble-farms.git",
        "status": "active",
        "type": "educational-portal"
      },
      "pitstop-ai": {
        "path": "client-projects/pitstop-ai",
        "repository": "https://github.com/neweraintelligence/pitstop-ai.git",
        "status": "active", 
        "type": "crm-system"
      },
      "ok-tire": {
        "path": "client-projects/ok-tire",
        "repository": "https://github.com/neweraintelligence/ok-tire.git",
        "status": "active",
        "type": "voice-analytics"
      },
      "dpa": {
        "path": "client-projects/dpa",
        "repository": "https://github.com/neweraintelligence/dpa-invoice.git",
        "status": "development",
        "type": "invoice-processing"
      },
