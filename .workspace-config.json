    "description": "Multi-project workspace for AI solutions",
    "root_repository": "https://github.com/neweraintelligence/Pitstop-AI-CRM.git"
  },
  "projects": {
    "internal": {
      "background-agents": {
        "path": "internal-projects/background-agents",
